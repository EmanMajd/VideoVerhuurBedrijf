<form asp-action="loginVerify" method="post">

	<label asp-for="Naam"><h2>Naam</h2></label>
	@Html.ValidationMessageFor(m => m.Naam)
	<input asp-for="Naam" asp-route-id="Naam"/>
	<label asp-for="Postcode"><h2>Postcode</h2></label>
	@Html.ValidationMessageFor(m => m.Naam)
	<input asp-for="Postcode" asp-route-id="Postcode" />


	<input type="submit" value="Aanmelden" />
</form>